@model ToDoList.ViewModels.ToDoFormViewModel
@{

     ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "ToDo"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ToDoComment)
        @Html.TextBoxFor(m => m.ToDoComment, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ToDoComment)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")    
}
